<div class="books col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <% if book.user.profile_image.present? %>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, size: '50x50', format: 'jpeg' %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= image_tag asset_path('no-image-icon.jpg') %>
            <% end %>
          </td>
        <% end %>
        <td><%= link_to "#{book.title}", book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
