<div class="container">
  <div class="row">
    <div class="user-info col-md-5 mx-auto p-0">
      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %> <br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, 'Image' %> <br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <%= f.submit 'Update User', class: 'btn btn-secondary mb-3' %>
      <% end %>
    </div>
  </div>
</div>