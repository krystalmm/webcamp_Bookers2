<div class="container">
  <div class="row">
    <%= render 'layouts/side', book_user: current_user %>
    <div class="users col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <% if user.profile_image.present? %>
              <td>
                <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '50x50' %>
              </td>
            <% else %>
              <td>
                <%= image_tag 'no-image-icon.jpg' %>
              </td>
            <% end %>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>