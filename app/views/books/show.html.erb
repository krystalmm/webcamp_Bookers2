<div class="container">
  <div class="row">
    <%= render 'layouts/side', book_user: @book_detail.user %>
    <div class="book-detail col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <% if @book_detail.user.profile_image.present? %>
              <td>
                <%= link_to user_path(@book_detail.user) do %>
                  <%= attachment_image_tag @book_detail.user, :profile_image, format: 'jpeg', size: '100x100' %>
                  <p><%= @book_detail.user.name %></p>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to user_path(@book_detail.user) do %>
                  <%= image_tag asset_path('no-image-icon.jpg') %>
                  <p><%= @book_detail.user.name %></p>
                <% end %>
              </td>
            <% end %>
            <td><%= link_to "#{@book_detail.title}", book_path(@book_detail) %></td>
            <td><%= @book_detail.body %></td>
            <% if @book_detail.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book_detail), class: 'btn btn-success btn-sm' %></td>
              <td><%= link_to 'Destroy', book_path(@book_detail), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: '本当に消しますか？' } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
